<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.spotfindermobile_v1_5">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SpotFinderMobilev15">
        <activity android:name=".MainActivity"/>
        <activity android:name=".ui.termsandconditions.TermsAndConditionsActivity" />
        <activity android:name=".ui.createaccount.LotOwnerActivity"/>
        <activity android:name=".ui.createaccount.LicensePlateActivity"/>
        <activity android:name=".ui.createaccount.CreateAccountActivity"/>
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login"></activity>
        <activity android:name=".splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>